<?xml version="1.0" encoding="UTF-8"?>
<!--
/**
* db_schema.xml
*
*  DB Schema for Dhruvi_Firearm table
*
*/
-->
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
	<table name="dhruvi_firearm" resource="default" engine="innodb" comment="table to store firearm information">
		<column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true" comment="Firearm ID" />
		<column xsi:type="varchar" name="name" nullable="false" length="50" comment="Firearm Name" />
		<column xsi:type="varchar" name="type" nullable="false" length="50" comment="Firearm Type" />
		<constraint xsi:type="primary" referenceId="PRIMARY">
			<column name="id" />
		</constraint>
	</table>
</schema>
