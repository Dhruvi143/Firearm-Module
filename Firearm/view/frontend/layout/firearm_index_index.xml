/**
* firearm_index_index.xml
*
*  Layout For firearm/index/index => to view list
*
*/
-->
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
            layout="1column" 
            xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
	<body>
		<referenceContainer name="content">
			<!--
			/**
			*  Block should extend Template from Magento Framework
			*/
			-->
			<block class="Dhruvi\Firearm\Block\Display" name="firearms.list" template="Dhruvi_Firearm::list.phtml" />
		</referenceContainer>
	</body>
</page>
